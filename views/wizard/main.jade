.wizard
  .progress: .progress-bar.progress-bar-striped(style='width: {{progress}}%'): span.title {{variable.name}}

  p(ng-show='variable.question') {{variable.question}}
  ng-include(src='"templates/" + variable.type + "-input.html"')

  footer
    .pull-left
      button.btn.btn-lg.btn-primary(ng-show='previous', ng-click='previous()')
        i.glyphicon.glyphicon-chevron-left
        span.hidden-xs Previous
    .pull-right
      button.btn.btn-lg.btn-primary(ng-click='skip()') Skip
      button.btn.btn-lg.btn-primary(ng-click='continue()')
        span.hidden-xs Continue 
        i.glyphicon.glyphicon-chevron-right