.list-group.correlation-list
  a.list-group-item(
    ng-repeat='correlation in correlations'
    ng-click='select(correlation)'
    ng-class='{ "list-group-item-success": isPositive(correlation), "list-group-item-warning": isNegative(correlation), "active": isSelected(correlation) }'
  )
    | {{correlation.name}}
    span.badge(ng-class='isPositive(correlation) ? "badge-success" : "badge-warning"') {{correlation.pretty}}

ul.nav.nav-tabs.nav-justified
  li(ng-class='{ active: $state.includes("default") }'): a(ui-sref='default') Variables
  li(ng-class='{ active: $state.includes("insights") }'): a(ui-sref='insights') Correlations
