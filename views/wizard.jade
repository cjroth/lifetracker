wizard(on-finish='finishedWizard()')
  wz-step(title='{{variable.name}}', ng-repeat='variable in variables')
    h2 {{variable.name}}
    p(ng-show='variable.question') {{variable.question}}

    slider(
      ng-if='variable.type == "scale"'
      ng-model='record.value'
      min='0'
      step='1'
      max='10'
    )

    .input-group(ng-if='variable.type == "number"')
      input.form-control(
        type='text'
        ng-model='record.value'
      )
      span.input-group-addon(ng-if='variable.units') {{variable.units}}

    button.btn.btn-primary(type='submit', wz-next='') Continue
