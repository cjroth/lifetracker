#import-export-popover.popover(focusable-popover, ng-controller='ImportExportPopoverController')
  .arrow
  .popover-content
    .row
      .col-md-12
        a.btn.btn-primary.btn-block(ng-click='openFileManager("import-csv")')
          i.glyphicon.glyphicon-open
          |  Import
    .row
      .col-md-12
        a.btn.btn-primary.btn-block(ng-click='openFileManager("export-csv")')
          i.glyphicon.glyphicon-save
          |  Export

  input.hidden(type='file', name='import-csv', accept='.csv')
  input.hidden(type='file', name='export-csv', nwsaveas='lifetracker.csv')
