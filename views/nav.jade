.navbar-header.pull-left
  .navbar-brand(
    bs-popover
    data-trigger='click'
    data-content='{{"bleh"}}'
  ) Lifetracker

.navbar-header.pull-right(ng-class='{ "import-export-popover-active": importExportPopover.show }')
  a.btn.btn-link.navbar-btn(
    ui-sref='default'
    ng-class='{ active: $state.includes("default") || $state.includes("insights") }'
    bs-tooltip=''
    data-title='View Charts'
    data-placement='bottom'
    data-animation='none'
  ): i.glyphicon.glyphicon-signal
  a.btn.btn-link.navbar-btn(
    ui-sref='record'
    ng-class='{ active: $state.includes("record"), disabled: !variables.length }'
    bs-popover
    data-container='body'
    data-template='templates/record/record.html'
    data-animation=''
    data-placement='bottom'
  ): i.glyphicon.glyphicon-plus
  a.btn.btn-link.navbar-btn(
    bs-popover
    data-container='body'
    data-template='templates/import-export-popover.html'
    data-animation=''
    data-placement='bottom'
  ): i.glyphicon.glyphicon-sort
