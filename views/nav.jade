.navbar-header.pull-left
  .navbar-brand Lifetracker

.navbar-header.pull-right
  a.btn.btn-link.navbar-btn(
    ui-sref='default'
    ng-class='{ active: $state.includes("default") }'
    bs-tooltip=''
    data-title='View Charts'
    data-placement='bottom'
    data-animation='none'
    data-container='body'
  ): i.glyphicon.glyphicon-signal
  a.btn.btn-link.navbar-btn(
    ng-click='goToWizard()'
    ng-class='{ active: $state.includes("wizard") }'
    bs-tooltip=''
    data-title='Record Data'
    data-placement='bottom'
    data-animation='none'
    data-container='body'
  ): i.glyphicon.glyphicon-plus
  a.btn.btn-link.navbar-btn(
    ng-class='{ active: $state.includes("settings") }'
    bs-tooltip=''
    data-title='Settings'
    data-placement='bottom'
    data-animation='none'
    data-container='body'
  ): i.glyphicon.glyphicon-cog
