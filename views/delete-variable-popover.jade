.popover.right.delete-variable-popover(focusable-popover, ng-controller='DeleteVariablePopoverController')
  .arrow
  .popover-content
            
    form(ng-submit='delete()')

      .row
        .col-xs-12
          b Delete {{variable.name}}?

      .row
        .col-xs-6
          button.btn.btn-default.btn-block(type='button', ng-click='$hide()') Cancel
        .col-xs-6
          button.btn.btn-danger.btn-block(type='submit') Delete
